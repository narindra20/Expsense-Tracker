generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String    @map("first_name")
  lastName  String    @map("last_name")
  email     String    @unique
  password  String
  createdAt DateTime @default(now())
  
  // Relations
  categories Category[]
  expenses   Expense[]
  incomes    Income[]
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String?   // optionnel
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  expenses    Expense[]
}

model Expense {
  id          Int       @id @default(autoincrement())
  title       String
  amount      Float
  type        String     @default("ponctuelle") // "ponctuelle" ou "recurrente"
  description String?
  receipt     String?    // chemin du fichier reçu
  date        DateTime?  // pour dépenses ponctuelles
  startDate   DateTime?  // pour récurrente
  endDate     DateTime?  // pour récurrente
  categoryId  Int
  category    Category   @relation(fields: [categoryId], references: [id])
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
}


model Income {
  id          Int      @id @default(autoincrement())
  title       String
  amount      Float
  date        DateTime
  description String?
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}
